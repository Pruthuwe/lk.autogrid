# Security rules for API directory

# Prevent direct access to config.php
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Prevent directory listing
Options -Indexes

# Allow only specific file types
<FilesMatch "\.(php)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Prevent access to rate limit files
<FilesMatch "rate_limit_.*\.txt$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

